        <activity
            android:name="com.example.fintrack.Activity.ContactusActivity"
            android:exported="false" />
        <activity
            android:name="com.example.fintrack.Activity.ChangepasswordActivity"
            android:exported="false" />
        <activity
            android:name="com.example.fintrack.Activity.ProfilescreenActivity"
            android:exported="false" />
        <activity
            android:name="com.example.fintrack.Activity.SplashActivity"
            android:theme="@style/Theme.Demo.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.fintrack.Activity.LoginActivity"
            android:exported="true" />
        <activity
            android:name="com.example.fintrack.Activity.SignupActivity"
            android:exported="true" />
        <activity
            android:name="com.example.fintrack.Activity.HomeScreenActivity"
            android:exported="true" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
